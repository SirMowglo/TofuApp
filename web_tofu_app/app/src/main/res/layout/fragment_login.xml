<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".ui.view.fragment.LoginFragment"
  android:background="@color/tofu_background">

  <ImageView
    android:id="@+id/loginTofuLogo"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:src="@mipmap/ic_logo_tofu_foreground"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

  <TextView
    android:id="@+id/loginLabelEslogan"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/open_sans_extrabold"
    android:text="Cook, Share, Discover!"
    android:textSize="24sp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintVertical_bias="0.42" />

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/loginTextInputLayoutUsername"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    app:boxCornerRadiusBottomEnd="50dp"
    app:boxCornerRadiusBottomStart="50dp"
    app:boxCornerRadiusTopEnd="50dp"
    app:boxCornerRadiusTopStart="50dp"
    app:boxStrokeColor="@color/black"
    app:boxStrokeWidth="3dp"
    app:layout_constraintTop_toBottomOf="@id/loginLabelEslogan"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:boxBackgroundColor="@color/white">
    <com.google.android.material.textfield.TextInputEditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Username"
      android:textAppearance="@style/text_input_style"/>
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/loginTextInputLayoutPassword"

    android:layout_width="360dp"
    android:layout_height="wrap_content"
    app:boxCornerRadiusBottomEnd="50dp"
    app:boxCornerRadiusBottomStart="50dp"
    app:boxCornerRadiusTopEnd="50dp"
    app:boxCornerRadiusTopStart="50dp"
    app:boxStrokeColor="@color/black"
    app:boxStrokeWidth="3dp"
    app:layout_constraintTop_toBottomOf="@id/loginTextInputLayoutUsername"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:boxBackgroundColor="@color/white"
    >
    <com.google.android.material.textfield.TextInputEditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Password"
      android:textAppearance="@style/text_input_style"/>
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.button.MaterialButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:strokeColor="@color/black"
    app:strokeWidth="3dp"
    android:text="Buenas"
    android:backgroundTint="@color/tofu_accent_green"
    android:textColor="@color/black"
    android:shadowDy="10"
    android:shadowColor="@color/black"
    android:shadowRadius="0"
    app:layout_constraintTop_toBottomOf="@id/loginTextInputLayoutPassword"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
