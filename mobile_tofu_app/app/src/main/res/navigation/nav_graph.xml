<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/launcherFragment">

    <fragment
        android:id="@+id/launcherFragment"
        android:name="com.example.tofuapp.ui.view.fragment.LauncherFragment"
        android:label="fragment_launcher"
        tools:layout="@layout/fragment_launcher">

        <action
            android:id="@+id/fromLauncherFragmentToLoginScreenFragment"
            app:destination="@id/loginScreenFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginScreenFragment"
        android:name="com.example.tofuapp.ui.view.fragment.LoginScreenFragment"
        android:label="fragment_login_screen"
        tools:layout="@layout/fragment_login_screen">

        <action
            android:id="@+id/fromLoginScreenFragmentToUserScreenFragment"
            app:destination="@id/userScreenFragment"
            app:popUpTo="@id/loginScreenFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/fromLoginScreenFragmentToRegisterScreenFragment"
            app:destination="@id/registerScreenFragment"
            app:popUpTo="@id/loginScreenFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/userScreenFragment"
        android:name="com.example.tofuapp.ui.view.fragment.UserScreenFragment"
        android:label="fragment_user_screen"
        tools:layout="@layout/fragment_user_screen">

        <action
            android:id="@+id/fromUserScreenFragmentToLoginScreenFragment"
            app:destination="@id/loginScreenFragment" />

        <action
            android:id="@+id/fromUserScreenFragmentToAddRecipeScreenFragment"
            app:destination="@id/addRecipeScreenFragment"
            app:popUpTo="@id/userScreenFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/recipesScreenFragment"
        android:name="com.example.tofuapp.ui.view.fragment.RecipesScreenFragment"
        android:label="fragment_recipes_screen"
        tools:layout="@layout/fragment_recipes_screen">

        <action
            android:id="@+id/fromRecipesScreenFragmentToLoginScreenFragment"
            app:destination="@id/loginScreenFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsScreenFragment"
        android:name="com.example.tofuapp.ui.view.fragment.SettingsScreenFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings_screen">

        <action
            android:id="@+id/fromSettingsScreenFragmentToLoginScreenFragment"
            app:destination="@id/loginScreenFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerScreenFragment"
        android:name="com.example.tofuapp.ui.view.fragment.RegisterScreenFragment"
        android:label="fragment_register_screen"
        tools:layout="@layout/fragment_register_screen">

        <action
            android:id="@+id/fromRegisterScreenFragmentToLoginScreenFragment"
            app:destination="@id/loginScreenFragment"
            app:popUpTo="@id/registerScreenFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/addRecipeScreenFragment"
        android:name="com.example.tofuapp.ui.view.fragment.AddRecipeScreenFragment"
        android:label="fragment_add_recipe_screen"
        tools:layout="@layout/fragment_add_recipe_screen">

        <action
            android:id="@+id/fromAddRecipeScreenFragmentToUserScreenFragment"
            app:destination="@id/userScreenFragment"
            app:popUpTo="@id/addRecipeScreenFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>