<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tofu_background"
    tools:context=".ui.view.fragment.RecipeDetailsScreenFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/recipeDetailsAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/profileCollapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tofu_generic_regular"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextAppearance="@style/appbar_title"
            app:collapsedTitleTextColor="@color/white"
            app:contentScrim="@color/tofu_generic_regular"
            app:expandedTitleTextColor="@color/white"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:titleCollapseMode="scale"
            tools:title="Alejandro Damas Villatoro">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/recipeDetailsImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/grow_to_constraint"
                    android:backgroundTint="@color/grey_dark"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:layout_constraintBottom_toTopOf="@id/recipeDetailsInfo"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/recipeDetailsImageCircularLoading"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@id/recipeDetailsImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/recipeDetailsImage"
                    tools:visibility="visible" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/recipeDetailsInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/tofu_background"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/recipeDetailsName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_margin="12dp"
                        android:textAppearance="@style/appbar_title"
                        tools:text="Recipe Name" />

                    <TextView
                        android:id="@+id/recipeDetailsAuthorUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="46dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/grey_darker"
                        android:textSize="18sp"
                        tools:text="@Username" />

                    <TextView
                        android:id="@+id/recipeDetailsDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/black_alpha_40"
                        android:textSize="16sp"
                        tools:text="pedazo de texto to largo " />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/recipeLabelType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:shadowColor="@color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="6"
                    android:text="Meal"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@id/recipeDetailsInfo"
                    app:layout_constraintStart_toStartOf="parent" />
                <TextView
                    android:id="@+id/recipeLabelPrepTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:shadowColor="@color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="6"
                    android:text="15 m"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@id/recipeDetailsInfo"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/recipeDetailsToolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:navigationIcon="@drawable/ic_back_arrow"
                app:navigationIconTint="@color/white"
                app:layout_collapseMode="pin" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:scrollbars="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Ingredients"
                android:textAppearance="@style/appbar_title"
                android:textColor="@color/tofu_generic_dark" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recipeDetailsIngredientsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                android:layout_marginHorizontal="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Steps"
                android:textAppearance="@style/appbar_title"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                android:textColor="@color/tofu_generic_dark" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recipeDetailsStepsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>