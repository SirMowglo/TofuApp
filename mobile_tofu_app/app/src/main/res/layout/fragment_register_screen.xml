<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.fragment.RegisterScreenFragment"
    android:background="@color/tofu_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/registerToolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:navigationIconTint="@color/white"
        app:title="Register"
        app:titleTextAppearance="@style/appbar_title"
        android:background="@color/tofu_generic_regular"
        app:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registerInputLayoutUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/registerToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="@dimen/login_input_layout_vertical_bias"
        android:hint="@string/login_input_username_hint"
        app:boxBackgroundColor="@color/white"
        android:layout_marginTop="@dimen/login_input_layout_username_margin_top"
        android:layout_marginHorizontal="12dp"

        app:boxCornerRadiusBottomEnd="@dimen/login_input_layout_corner_radius"
        app:boxCornerRadiusBottomStart="@dimen/login_input_layout_corner_radius"
        app:boxCornerRadiusTopEnd="@dimen/login_input_layout_corner_radius"
        app:boxCornerRadiusTopStart="@dimen/login_input_layout_corner_radius"

        app:errorIconDrawable="@null"
        app:errorTextColor="@color/tofu_accent_red_light"
        app:boxStrokeErrorColor="@color/tofu_accent_red_light"
        app:errorEnabled="true"
        app:boxStrokeColor="@drawable/selector_input_border_color"
        app:boxStrokeWidth="@dimen/login_input_layout_stroke_width"
        app:hintTextColor="@color/black"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/registerInputUsername"
            android:inputType="text"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/input_hint"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registerInputLayoutFullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/registerInputLayoutUsername"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="@dimen/login_input_layout_vertical_bias"
        android:hint="Fullname"
        app:boxBackgroundColor="@color/white"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="12dp"

        app:boxCornerRadiusBottomEnd="@dimen/login_input_layout_corner_radius"
        app:boxCornerRadiusBottomStart="@dimen/login_input_layout_corner_radius"
        app:boxCornerRadiusTopEnd="@dimen/login_input_layout_corner_radius"
        app:boxCornerRadiusTopStart="@dimen/login_input_layout_corner_radius"

        app:errorIconDrawable="@null"
        app:errorEnabled="true"

        app:errorTextColor="@color/tofu_accent_red_light"
        app:boxStrokeErrorColor="@color/tofu_accent_red_light"
        app:boxStrokeColor="@drawable/selector_input_border_color"
        app:boxStrokeWidth="@dimen/login_input_layout_stroke_width"
        app:hintTextColor="@color/black"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/registerInputFullname"
            android:inputType="text"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/input_hint"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registerInputLayoutPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/registerInputLayoutFullname"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="@dimen/login_input_layout_vertical_bias"
        android:hint="@string/login_input_password_hint"
        app:boxBackgroundColor="@color/white"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="12dp"

        app:boxCornerRadiusBottomEnd="@dimen/login_input_layout_corner_radius"
        app:boxCornerRadiusBottomStart="@dimen/login_input_layout_corner_radius"
        app:boxCornerRadiusTopEnd="@dimen/login_input_layout_corner_radius"
        app:boxCornerRadiusTopStart="@dimen/login_input_layout_corner_radius"

        app:errorIconDrawable="@null"
        app:errorTextColor="@color/tofu_accent_red_light"
        app:boxStrokeErrorColor="@color/tofu_accent_red_light"
        app:boxStrokeColor="@drawable/selector_input_border_color"
        app:errorEnabled="true"
        app:boxStrokeWidth="@dimen/login_input_layout_stroke_width"
        app:hintTextColor="@color/black"
        app:endIconMode="password_toggle"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/registerInputPassword"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/input_hint"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registerInputLayoutVerifyPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/registerInputLayoutPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="@dimen/login_input_layout_vertical_bias"
        android:hint="Verify Password"
        app:boxBackgroundColor="@color/white"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="12dp"

        app:boxCornerRadiusBottomEnd="@dimen/login_input_layout_corner_radius"
        app:boxCornerRadiusBottomStart="@dimen/login_input_layout_corner_radius"
        app:boxCornerRadiusTopEnd="@dimen/login_input_layout_corner_radius"
        app:boxCornerRadiusTopStart="@dimen/login_input_layout_corner_radius"

        app:errorIconDrawable="@null"
        app:errorEnabled="true"

        app:errorTextColor="@color/tofu_accent_red_light"
        app:boxStrokeErrorColor="@color/tofu_accent_red_light"
        app:boxStrokeColor="@drawable/selector_input_border_color"
        app:boxStrokeWidth="@dimen/login_input_layout_stroke_width"
        app:hintTextColor="@color/black"
        app:endIconMode="password_toggle"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/registerInputVerifyPassword"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/input_hint"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registerInputLayoutEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/registerInputLayoutVerifyPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="@dimen/login_input_layout_vertical_bias"
        android:hint="Email"
        app:boxBackgroundColor="@color/white"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="12dp"

        app:boxCornerRadiusBottomEnd="@dimen/login_input_layout_corner_radius"
        app:boxCornerRadiusBottomStart="@dimen/login_input_layout_corner_radius"
        app:boxCornerRadiusTopEnd="@dimen/login_input_layout_corner_radius"
        app:boxCornerRadiusTopStart="@dimen/login_input_layout_corner_radius"

        app:errorIconDrawable="@null"
        app:errorEnabled="true"

        app:errorTextColor="@color/tofu_accent_red_light"
        app:boxStrokeErrorColor="@color/tofu_accent_red_light"
        app:boxStrokeColor="@drawable/selector_input_border_color"
        app:boxStrokeWidth="@dimen/login_input_layout_stroke_width"
        app:hintTextColor="@color/black"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/registerInputEmail"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/input_hint"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/registerInputLayoutVerifyEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/registerInputLayoutEmail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="@dimen/login_input_layout_vertical_bias"
        android:hint="Verify Email"
        app:boxBackgroundColor="@color/white"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="12dp"

        app:boxCornerRadiusBottomEnd="@dimen/login_input_layout_corner_radius"
        app:boxCornerRadiusBottomStart="@dimen/login_input_layout_corner_radius"
        app:boxCornerRadiusTopEnd="@dimen/login_input_layout_corner_radius"
        app:boxCornerRadiusTopStart="@dimen/login_input_layout_corner_radius"

        app:errorIconDrawable="@null"
        app:errorEnabled="true"

        app:errorTextColor="@color/tofu_accent_red_light"
        app:boxStrokeErrorColor="@color/tofu_accent_red_light"
        app:boxStrokeColor="@drawable/selector_input_border_color"
        app:boxStrokeWidth="@dimen/login_input_layout_stroke_width"
        app:hintTextColor="@color/black"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/registerInputVerifyEmail"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/input_hint"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registerButtonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/registerInputLayoutVerifyEmail"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/open_sans_extrabold"
        android:textSize="@dimen/login_button_login_text_size"
        android:paddingVertical="@dimen/login_button_login_padding_vertical"
        android:layout_marginHorizontal="12dp"
        android:text="Register"
        android:textColor="@color/white"
        android:backgroundTint="@drawable/selector_button_green_disabled"
        app:strokeColor="@color/black"
        android:enabled="false"
        app:strokeWidth="@dimen/login_button_login_stroke_width"
        app:cornerRadius="@dimen/login_button_login_corner_radius" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/registerCircularLoading"
        android:layout_width="70dp"
        android:layout_height="70dp"
        style="@style/Widget.AppCompat.ProgressBar"
        android:visibility="invisible"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/registerButtonLogin"/>
</androidx.constraintlayout.widget.ConstraintLayout>