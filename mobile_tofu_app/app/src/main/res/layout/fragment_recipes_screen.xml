<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.fragment.RecipesScreenFragment"
    android:background="@color/tofu_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/recipesToolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:title="Recipes"
        app:titleTextAppearance="@style/appbar_title"
        android:background="@color/tofu_generic_dark"
        app:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grow_to_constraint"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/recipesToolbar"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>